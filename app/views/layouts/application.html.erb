<!DOCTYPE html>
<html>
  <head>
    <title>Shiritaidesyouhinn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-lightd">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><span>知りたいでしょうひん</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <%= render 'layouts/header_public' %>
              <% elsif admin_signed_in? %>
                <%= render 'layouts/header_admin' %>
              <% else %>
                <%= render 'layouts/header_logout' %>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container main-container">
       <p id="notice"><%= notice %></p>
      　<%= yield %>
      </div>
    </main>
     <footer>
       <div class='container mt-5'>
         <div class="row no-gutters">
           <div class='mx-auto'>
            <%= render 'layouts/footer' %>
          </div>
         </div>
       </div>
     </footer>
  </body>
</html>
