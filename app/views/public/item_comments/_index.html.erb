<br />
<h5>コメント</h5>
<table>
  <tbody>
      <% @item.item_comments.each do |item_comment| %>
      <tr>
        <th>
          <%= link_to user_path(item_comment.user) do %>
            <%= image_tag item_comment.user.get_profile_image, size: "100x100" %>
            <%= item_comment.user.name %>
          <% end %>
        </th>
        <th><%= item_comment.comment %></th>
        <th>
          <% if item_comment.user == current_user %>
            <%= button_to "削除", item_item_comment_path(item,item_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </th>
      </tr>
      <% end %>
  </tbody>
</table>