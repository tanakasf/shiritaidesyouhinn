<table>
  <tbody>
      <% item.item_comments.each do |item_comment| %>
      <tr>

        <td>
          <%= link_to user_path(item_comment.user) do %>
            <%= image_tag item_comment.user.get_profile_image, size: "100x100" %><br>
            <%= item_comment.user.name %>
          <% end %>
        </td>
        <td><%= item_comment.comment %></td>
        <td>
          <% if item_comment.user == current_user %>
            <%= link_to "Destroy", item_item_comment_path(item, item_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>